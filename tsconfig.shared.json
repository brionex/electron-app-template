{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "lib": ["ES2020"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/shared/*"]
    }
  },
  "include": ["src/shared/**/*"]
}
