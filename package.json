{
  "name": "electron-app-template",
  "productName": "app-template",
  "description": "Plantilla base para crear aplicaciones de escritorio multiplataforma con Electron, React, Vite y TailwindCSS.",
  "version": "1.0.0",
  "keywords": [
    "electron",
    "vite",
    "react",
    "tailwindcss",
    "typescript",
    "sqlite",
    "desktop-app",
    "multiplatform"
  ],
  "license": "MIT",
  "author": "brioneq",
  "main": ".vite/build/main.js",
  "scripts": {
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "app": "node src/scripts/run-app.mjs",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@electron-toolkit/utils": "4.0.0",
    "electron-squirrel-startup": "1.0.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "7.8.1",
    "@electron-forge/maker-deb": "7.8.1",
    "@electron-forge/maker-dmg": "7.8.1",
    "@electron-forge/maker-rpm": "7.8.1",
    "@electron-forge/maker-squirrel": "7.8.1",
    "@electron-forge/maker-zip": "7.8.1",
    "@electron-forge/plugin-fuses": "7.8.1",
    "@electron-forge/plugin-vite": "7.8.1",
    "@electron/fuses": "1.8.0",
    "@tailwindcss/postcss": "4.1.7",
    "@types/electron-squirrel-startup": "1.0.2",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@typescript-eslint/eslint-plugin": "6.20.0",
    "@typescript-eslint/parser": "6.20.0",
    "@vitejs/plugin-react-swc": "3.9.0",
    "electron": "36.9.5",
    "eslint": "8.57.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "globals": "16.0.0",
    "postcss": "8.5.3",
    "tailwindcss": "4.1.7",
    "typescript": "5.8.3",
    "vite": "6.4.1"
  }
}
